@using System.Web.Mvc
@using System.Web.Mvc.Html
@using Matrix.Company.DomainClasses
@model Matrix.Company.DomainClasses.Products
@helper GetProductDetails(WebViewPage page, List<Product> products)
    {
    <ul>
        @foreach (var item in products)
        {

            <li>@page.Html.ActionLink(item.Name, "Details", new { id = item.ProductNumber })</li>
        }
    </ul>
}