@model Matrix.Company.DomainClasses.News
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/Admin/_AdminLayout.cshtml";
}
<link href="@Url.Content("~/Content/redactor/redactor.css")" rel="stylesheet" type="text/css" />
<script src="@Url.Content("~/Scripts/redactor/jquery-1.9.0.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/redactor/redactor.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/redactor/langs/fa.js")" type="text/javascript"></script>
<h2>
    بخش مدیریت | ویرایش خبر</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>اخبار</legend>
        @Html.HiddenFor(model => model.Id)
        <div class="editor-label">
            @Html.LabelFor(model => model.NewsTitle)
        </div>
        <div class="editor-field">
            @Html.TextAreaFor(model => model.NewsTitle)
            @Html.ValidationMessageFor(model => model.NewsTitle)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.Author)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Author)
            @Html.ValidationMessageFor(model => model.Author)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.Description)
        </div>
        <div class="editor-field">
            <div class="editor-field">
                @Html.TextAreaFor(model => model.Description, htmlAttributes: new { style = "width:98%; height:500px" })
                <script type="text/javascript">
                    $('#Description').redactor({

                        autoformat: false,
                        convertDivs: false
                    });
                </script>
                @Html.ValidationMessageFor(model => model.Description)
            </div>
            <div class="editor-label">
                @Html.LabelFor(model => model.Status)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Status)
                @Html.ValidationMessageFor(model => model.Status)
            </div>
            <div class="editor-label">
                @Html.LabelFor(model => model.CreatedBy)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.CreatedBy)
                @Html.ValidationMessageFor(model => model.CreatedBy)
            </div>
            <div class="editor-label">
                @Html.LabelFor(model => model.CreatedOnPersian)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.CreatedOnPersian)
                @Html.ValidationMessageFor(model => model.CreatedOnPersian)
            </div>
            <div class="editor-label">
                @Html.LabelFor(model => model.ModifiedOn)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.ModifiedOn)
                @Html.ValidationMessageFor(model => model.ModifiedOn)
            </div>
            <div class="editor-label">
                @Html.LabelFor(model => model.ModifiedBy)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.ModifiedBy)
                @Html.ValidationMessageFor(model => model.ModifiedBy)
            </div>
            <div class="editor-label">
                @Html.LabelFor(model => model.StartPublishing)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.StartPublishing)
                @Html.ValidationMessageFor(model => model.StartPublishing)
            </div>
            <div class="editor-label">
                @Html.LabelFor(model => model.FinishPublishing)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.FinishPublishing)
                @Html.ValidationMessageFor(model => model.FinishPublishing)
            </div>
            <p>
                <input type="submit" value="ذخیره" />
            </p>
    </fieldset>
}
<div>
    @Html.ActionLink("برگشت به لیست اخبار", "IndexAdmin")
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}