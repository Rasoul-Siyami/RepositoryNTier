@model Matrix.Company.DomainClasses.Role
@{
    ViewBag.Title = "مدیریت نفش ها | حذف نقش";
    Layout = "~/Views/Shared/Admin/_AdminLayout.cshtml";
}
<h2>
    مدیریت نفش ها | حذف نقش</h2>
<h3>
    Are you sure you want to delete this?</h3>
<fieldset>
    <legend>Role</legend>
    <div class="display-label">
        @Html.DisplayNameFor(model => model.RoleName)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.RoleName)
    </div>
    <div class="display-label">
        @Html.DisplayNameFor(model => model.RoleDescription)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.RoleDescription)
    </div>
</fieldset>
@using (Html.BeginForm())
{
    <p>
        <input type="submit" value="حذف" />
        |
        @Html.ActionLink("برگشت به لیست نقش ها", "Index")
    </p>
}