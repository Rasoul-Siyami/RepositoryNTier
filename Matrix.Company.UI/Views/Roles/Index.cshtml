@model IEnumerable<Matrix.Company.DomainClasses.Role>
@{
    ViewBag.Title = "مدیریت نقش ها | لیست نقش ها";
    Layout = "~/Views/Shared/Admin/_AdminLayout.cshtml";
}
<h2>
    مدیریت نقش ها | لیست نقش ها</h2>
<p>
    @Html.ActionLink("ایجاد نقش", "Create")
</p>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.RoleName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RoleDescription)
        </th>
        <th>
        </th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RoleName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RoleDescription)
            </td>
            <td>
                @Html.ActionLink("ویرایش", "Edit", new { id = item.RoleId }) |
                @Html.ActionLink("جزئیات", "Details", new { id = item.RoleId }) |
                @Html.ActionLink("حذف", "Delete", new { id = item.RoleId })
            </td>
        </tr>
    }
</table>