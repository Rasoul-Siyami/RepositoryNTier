@model Matrix.Company.DomainClasses.Role
@{
    ViewBag.Title = "مدیریت وب لینک ها| ویرایش نقش";
    Layout = "~/Views/Shared/Admin/_AdminLayout.cshtml";
}
<h2>
    مدیریت وب لینک ها| ویرایش نقش</h2>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Role</legend>
        @Html.HiddenFor(model => model.RoleId)
        <div class="editor-label">
            @Html.LabelFor(model => model.RoleName)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.RoleName)
            @Html.ValidationMessageFor(model => model.RoleName)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.RoleDescription)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.RoleDescription)
            @Html.ValidationMessageFor(model => model.RoleDescription)
        </div>
        <p>
            <input type="submit" value="ذخیره" />
        </p>
    </fieldset>
}
<div>
    @Html.ActionLink("برگشت به لیست نقش ها", "Index")
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}