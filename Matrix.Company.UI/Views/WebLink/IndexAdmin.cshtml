@model IEnumerable<Matrix.Company.DomainClasses.Weblink>
@using Matrix.Company.UI.Helpers
@{
    ViewBag.Title = "مدیریت وب لینک ها | لیست وب لینک ها";
    Layout = "~/Views/Shared/Admin/_AdminLayout.cshtml";

}
<h2>
    مدیریت وب لینک ها | لیست وب لینک ها</h2>
<p>
    @Html.ActionLink("ایجاد وب لینک جدید", "Create")
</p>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.WebLinkTitle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.URL)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.Description)
        </th>*@
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th>
        </th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.WebLinkTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.URL)
            </td>
            @* <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @* @Html.ActionLink("ویرایش", "Edit", new { id = item.Id }) |*@
                @Html.ActionImage("Edit", new { id = item.Id }, "~/Content/Admin/images/edit_property-26.png", "ویرایش")|
                @* @Html.ActionLink("جزئیات", "Details", new { id = item.Id }) |*@
                @Html.ActionImage("Details", new { id = item.Id }, "~/Content/Admin/images/View_Details-26.png", "جزئیات")|
                @* @Html.ActionLink("حذف", "Delete", new { id = item.Id })*@
                @Html.ActionImage("Delete", new { id = item.Id }, "~/Content/Admin/images/delete_property-26.png", "حذف")
            </td>
        </tr>

    }
</table>